extends base

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Enter your account email
      form.form.form--forgot-password
        .form__group
          label.form__label(for='email') Email address
          input#email.form__input(type='email', placeholder='you@example.com', required)
        .form__group
          button.btn.btn--green#reset-btn Reset Password